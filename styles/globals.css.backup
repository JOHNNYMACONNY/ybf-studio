/* Custom slider styles for audio player */
.slider {
  -webkit-appearance: none;
  appearance: none;
  background: transparent;
  cursor: pointer;
}

.slider::-webkit-slider-track {
  background: #404040; /* neutral-700 */
  height: 4px;
  border-radius: 2px;
}

.slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  background: #FCA311; /* amber-500 */
  height: 12px;
  width: 12px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s ease;
}

.slider::-webkit-slider-thumb:hover {
  background: #F59E0B;
  transform: scale(1.1);
}

.slider::-moz-range-track {
  background: #404040; /* neutral-700 */
  height: 4px;
  border-radius: 2px;
  border: none;
}

.slider::-moz-range-thumb {
  background: #FCA311; /* amber-500 */
  height: 12px;
  width: 12px;
  border-radius: 50%;
  cursor: pointer;
  border: none;
  transition: all 0.2s ease;
}

.slider::-moz-range-thumb:hover {
  background: #F59E0B;
  transform: scale(1.1);
}

/* Add bottom padding to body to account for fixed audio player */
body {
  padding-bottom: 80px;
}

