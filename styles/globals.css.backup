/* IMPORTANT: Import components.css BEFORE Tailwind in v4 */
@import "./components.css";

/* Then import Tailwind */
@import "tailwindcss";

/* Override Tailwind's default font variables to prevent conflicts */
:root, :host {
  --font-sans: 'Inter', ui-sans-serif, system-ui, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
  --font-display: 'Instrument Serif', serif;
  --font-mono: 'Geist Mono', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

html,
body {
  padding: 0;
  margin: 0;
  font-family: var(--font-sans);
  background: #171717; /* neutral-900 */
  color: #F5F5F5; /* neutral-100 */
  min-height: 100vh;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-feature-settings: normal;
  font-variation-settings: normal;
  -webkit-tap-highlight-color: transparent;
}

/* Phase 12E: 3D Spline Background System */
body[data-3d-background="true"] {
  background: transparent !important;
  overflow-x: hidden;
}

html[data-3d-background="true"] {
  background: transparent !important;
  overflow-x: hidden;
}

/* 3D Spline Background Container */
.bg-3d-spline-container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #0A0A0A 0%, #171717 100%);
  overflow: hidden;
}

/* 3D Spline Background Overlay */
.bg-3d-spline-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  z-index: 1;
}

/* 3D Spline Content Layer */
.bg-3d-spline-content {
  position: relative;
  z-index: 2;
}

/* 3D Spline Text Styles */
.text-3d-spline-primary {
  color: #10B981;
  text-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
}

.text-3d-spline-accent {
  color: #F59E0B;
  text-shadow: 0 0 20px rgba(245, 158, 11, 0.3);
}

.text-3d-spline-energy {
  color: #F97316;
  text-shadow: 0 0 20px rgba(249, 115, 22, 0.3);
}

/* 3D Spline Card Styles */
.card-3d-spline {
  background: rgba(38, 38, 38, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(16, 185, 129, 0.2);
  box-shadow: 0 20px 40px rgba(16, 185, 129, 0.1), 0 10px 20px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.card-3d-spline:hover {
  border-color: rgba(16, 185, 129, 0.4);
  box-shadow: 0 25px 50px rgba(16, 185, 129, 0.15), 0 15px 30px rgba(0, 0, 0, 0.3);
  transform: translateY(-2px);
}

/* 3D Spline Button Styles */
.btn-3d-spline {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  border: 1px solid rgba(16, 185, 129, 0.3);
  box-shadow: 0 4px 15px rgba(16, 185, 129, 0.2);
  transition: all 0.3s ease;
}

.btn-3d-spline:hover {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
  transform: translateY(-1px);
}

.btn-3d-spline-accent {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  border: 1px solid rgba(245, 158, 11, 0.3);
  box-shadow: 0 4px 15px rgba(245, 158, 11, 0.2);
  transition: all 0.3s ease;
}

.btn-3d-spline-accent:hover {
  background: linear-gradient(135deg, #D97706 0%, #B45309 100%);
  box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
  transform: translateY(-1px);
}

/* 3D Spline Animation Keyframes */
@keyframes float-3d {
  0%, 100% { 
    transform: translateY(0px) rotate(0deg); 
  }
  50% { 
    transform: translateY(-20px) rotate(180deg); 
  }
}

@keyframes pulse-3d {
  0%, 100% { 
    opacity: 0.3; 
    transform: scale(1); 
  }
  50% { 
    opacity: 0.8; 
    transform: scale(1.1); 
  }
}

@keyframes glow-3d {
  0%, 100% { 
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.3); 
  }
  50% { 
    box-shadow: 0 0 40px rgba(16, 185, 129, 0.6); 
  }
}

/* 3D Spline Animation Classes */
.animate-float-3d {
  animation: float-3d 6s ease-in-out infinite;
}

.animate-pulse-3d {
  animation: pulse-3d 4s ease-in-out infinite;
}

.animate-glow-3d {
  animation: glow-3d 3s ease-in-out infinite;
}

/* 3D Spline Responsive Styles */
@media (max-width: 768px) {
  .bg-3d-spline-container {
    background: linear-gradient(135deg, #0A0A0A 0%, #171717 100%);
  }
  
  .text-3d-spline-primary,
  .text-3d-spline-accent,
  .text-3d-spline-energy {
    text-shadow: none;
  }
  
  .card-3d-spline {
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
  }
}

