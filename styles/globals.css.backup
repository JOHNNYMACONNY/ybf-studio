/* Critical Fonts - Load First */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Instrument+Serif:wght@400;500&display=swap');

/* Secondary Fonts - Load After */
@import url('https://fonts.googleapis.com/css2?family=Geist+Mono:wght@400;500&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:wght@400;500;600&display=swap');
